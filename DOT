void setup()

{

pinMode(6, OUTPUT);

}

void loop()

{

if (analogRead(A0) < 15) {      //当环境光强<15时，触发

delay(500);                     //____________________________________________以下为欢乐颂的不同频率的蜂鸣声组合

tone(6,3000,250);

delay(500);

tone(6,3000,250);

delay(500);

tone(6,3200,250);

delay(500);

tone(6,3500,250);

delay(500);

tone(6,3500,250);

delay(500);

tone(6,3200,250);

delay(500);

tone(6,3000,250);

delay(500);

tone(6,2700,250);

delay(500);

tone(6,2400,250);

delay(500);

tone(6,2400,250);

delay(500);

tone(6,2700,250);

delay(500);

tone(6,3000,250);

delay(500);

tone(6,3000,250);

delay(500);

tone(6,0,250);

delay(250);

tone(6,2700,150);

delay(250);

tone(6,2700,150);

delay(500);

tone(6,0,250);

delay(500);

tone(6,3000,250);

delay(500);

tone(6,3000,250);

delay(500);

tone(6,3200,250);

delay(500);

tone(6,3500,250);

delay(500);

tone(6,3500,250);

delay(500);

tone(6,3200,250);

delay(500);

tone(6,3000,250);

delay(500);

tone(6,2700,250);

delay(500);

tone(6,2400,250);

delay(500);

tone(6,2400,250);

delay(500);

tone(6,2700,250);

delay(500);

tone(6,3000,250);

delay(500);

tone(6,2700,250);

delay(500);

tone(6,0,250);

delay(250);

tone(6,2400,150);

delay(250);

tone(6,2400,150);

delay(500);

tone(6,0,250);

}

}

